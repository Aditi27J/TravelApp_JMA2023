<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".southIndia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="South India"
            android:textAlignment="center"
            android:textSize="48sp" />
        <TextView
            android:id="@+id/flashtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exclusive Summer Offer! Travel to any place in South India at just 5000Rs per person!"
            android:textAlignment="center"
            android:textSize="24sp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/karnataka"

            />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/Karnataka"
            android:layout_height="wrap_content"
            android:text="Karnataka"
            android:textSize="24sp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/tamilnadu"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Tamilnadu"
            android:text="TamilNadu"
            android:textSize="24sp"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/kerala"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Kerala"
            android:text="Kerala"
            android:textSize="24sp"
            />


    </LinearLayout>

</ScrollView>